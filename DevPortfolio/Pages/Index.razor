@page "/"

<div class="container mt-5">

    <!-- Home / Landing -->
    <div id="home" class="section d-flex flex-column justify-content-center align-items-center">
        <h1>Hi, I'm Paul Saltzman</h1>
        <p>Welcome to my developer portfolio!</p>
        <a class="btn btn-primary mt-3" href="#projects">View Projects</a>
    </div>

    <!-- About -->
    <section id="about" class="section d-flex flex-column justify-content-center align-items-center">
        <h2 class="text-center mb-4">About</h2>
    </section>

    <!-- Projects -->
    <section id="projects" class="section d-flex flex-column justify-content-center align-items-center">
        <h2 class="text-center mb-4">Projects</h2>
        <div class="row justify-content-center">

            <ProjectCard Title="Project 1"
                         Description="Description of Project 1"
                         Link="https://github.com/Paul-W-Saltzman/Project1" />

            <ProjectCard Title="Project 2"
                         Description="Description of Project 2"
                         Link="https://github.com/Paul-W-Saltzman/Project2" />

        </div>
    </section>

    <!-- Contact -->
    <section id="contact" class="section d-flex flex-column justify-content-center align-items-center">
        <h2>Contact Me</h2>

        <button class="btn btn-primary mb-3" @onclick="ToggleForm">
            @(showForm ? "Hide Contact Form" : "Contact Me")
        </button>

        <div class="form-container @(showForm ? "expanded" : "")">
            <form action="https://formspree.io/f/myzdrvdo" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">Your Name:</label>
                    <input type="name" id="name" name="name" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Your Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="message" class="form-label">Your Message:</label>
                    <textarea id="message" name="message" class="form-control" required></textarea>
                </div>

                <button type="submit" class="btn btn-success">Send</button>
            </form>
        </div>
    </section>

</div>

@code {
    private bool showForm = false;

    private void ToggleForm()
    {
        showForm = !showForm;
    }
}
